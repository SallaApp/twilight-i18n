{
  "upload": {
    "deprecateMissing": true,
    "type": "json",
    "files": [
      {
        "pattern": "locales/ar.json",
        "lang": "inherited",
        "path": "src/locales/",
        "file": "{lang}.json",
        "features": [
          "plural_postfix_br"
        ]
      },
      {
        "group": "existing",
        "pattern": "locales/*.json",
        "excludes": [
          "locales/ar.json"
        ],
        "lang": "${autodetectLang}",
        "path": "src/locales/",
        "file": "{lang}.json",
        "features": [
          "plural_postfix_br"
        ]
      }
    ]
  },
  "download": {
    "files": "locales/${lang}.json"
  }
}
